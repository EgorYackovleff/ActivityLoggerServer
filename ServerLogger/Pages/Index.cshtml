@page
@model IndexModel

<h1 class="display-4">Logger data</h1>

<table>
    <thead>
    <tr>
        <th>IP Address and Time</th>
        <th>Process List</th>
        <th>Window List</th>
        <th>Active Window</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var data in Model.AllData)
    {
        <tr>
            <td>@data.Key</td>
            <td>
                @foreach (var process in data.Value["ProcessList"])
                {
                    <p>@process</p>
                }
            </td>
            <td>
                @foreach (var window in data.Value["WindowList"])
                {
                    <p>@window</p>
                }
            </td>
            <td>
                @foreach (var activeWindow in data.Value["ActiveWindow"])
                {
                    <p>@activeWindow</p>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- Table for Screenshots -->
<h1 class="display-4">Screenshots</h1>

<table>
    <thead>
    <tr>
        <th>IP-адрес и время</th>
        <th>Путь к скриншоту</th>
        <th>Скриншот</th> <!-- Новый столбец для изображений -->
    </tr>
    </thead>
    <tbody>
    @foreach (var screenshotData in Model.AllScreenshots)
    {
        <tr>
            <td>@screenshotData.Key</td>
            <td>
                <a href="@screenshotData.Value">Скриншот</a>
            </td>
            <td>
                <!-- Загрузка изображения с использованием пути к скриншоту в качестве URL -->
                <img src="@screenshotData.Value" alt="Скриншот" style="max-width: 300px; max-height: 200px;" />
            </td>
        </tr>
    }
    </tbody>
</table>added